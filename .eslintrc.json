{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "extends": ["airbnb", "prettier", "prettier/react"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": ["react-hooks", "react", "prettier"],
    "rules": {
        "prettier/prettier": "error",
        "no-console": 1,
        "no-unused-vars": 2,
        "react/jsx-filename-extension": [
            1,
            {  
                "extensions": [".js", ".jsx"]
            }
        ]
    }
}